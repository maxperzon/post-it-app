<section id="show_post">
	<div class="wrapper-small">
		<h1><%= @quote.title %></h1>
		<div class="content">
			<p id="content_date">About <%= time_ago_in_words(@quote.created_at) %></p>
			<p><%= @quote.content %></p>
		</div>
		<%= link_to "Edit", edit_quote_path(@quote) %>
		<%= link_to "Delete", quote_path(@quote), method: :delete, data: {confirm: "Are you sure?"} %>
	</div>
</section>